                }
            });
            $("#chonzhi").click(function () {
                //var _sess = window.sessionStorage;
                //var userMessage = JSON.parse(_sess.getItem("userMessage"));
                if (obj.UserId) {
                    window.location.href = "/Manage/RechargePage";
                } else {
