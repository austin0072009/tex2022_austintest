    <script type="text/javascript">
        var obj = {};
        $(function () {
            if ($(document.body).outerWidth(true) > 641) {
                $("#phoneorpc").css("overflow", "visible");
            } else {
                $("#phoneorpc").css("overflow", "hidden")
            }
            GetUser();
            $("#loginBtn").click(function () {
                var mypassword = $("#mypassword").val();
                var mypassword2 = $("#mypassword2").val();
                var vsq = /^(\d)\1+$///是不是都一样
                var str = mypassword.replace(/\d/g, function ($0, pos) { //递减
                    return parseInt($0) - pos;
                });
                var strs = mypassword.replace(/\d/g, function ($0, pos) { //递增
                    return parseInt($0) + pos;
                });
                if (mypassword <= 0) {
                    alert('请输入支付密码')
                    return false;
                }
                if (mypassword != mypassword2) {
                    alert("俩次输入密码不相同");
                    return false;
                }

                if (vsq.test(mypassword)) {
                    alert("输入的6位支付密码不能相同");
                    return false;
                }
                if (!vsq.test(str) && !vsq.test(strs)) {
                    console.log("不是连号")
                } else {
                    alert("输入的6位支付密码不能连号")
                    return false;
                }
            });
            $("#user").click(function () {
                //var _sess = window.sessionStorage;
                //var userMessage = JSON.parse(_sess.getItem("userMessage"));
                if (obj.UserId) {
                    window.location.href = "/Manage/userIfo";
                } else {
