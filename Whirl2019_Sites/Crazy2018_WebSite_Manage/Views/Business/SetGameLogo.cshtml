
@{
    ViewBag.Title = "游戏LOGO";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    .layerbtn {
        display: inline-block;
        height: 20px;
        line-height: 20px;
        padding: 1px 10px 2px 9px;
        background-color: #A9A9A9;
        color: white;
        white-space: nowrap;
        text-align: center;
        font-size: 10px;
        border: none;
        border-radius: 2px;
        cursor: pointer;
    }

    th {
        text-align: center;
    }

    .form-control {
        width: 80%;
        height: 24px;
    }
</style>

<body onkeydown="keyLogin(event);" class="mainbody">
    <!--导航栏-->
    <div class="location">
        <a href="javascript:history.back(-1);" class="back"><i></i><span>返回上一页</span></a>
        <a href="/Home/Center" class="home"><i></i><span>首页</span></a>
        <i class="arrow"></i>
        <a href="/Business/SetGameLogo"><span>游戏logo</span></a>
        <i class="arrow"></i>
        <span>游戏logo列表</span>
    </div>
    <!--/导航栏-->
    <!--工具栏-->
    <div id="floatHead" class="toolbar-wrap">
        <div class="toolbar">
            <div class="box-wrap">
                <a class="menu-btn"></a>
                <div class="l-list">
                    <ul class="icon-list">
                        <li><a data-toggle="modal" data-target="#myModal" class="add" href=""><i></i><span>新增</span></a></li>
                        <li><a id="btnDelete" class="del"><i></i><span>删除</span></a></li>
                    </ul>
                    用户类型:
                    <select name="sellogotype" id="sellogotype" class="select">
                        <option value="0">全部</option>
                        <option value="1">纯色</option>
                        <option value="2">白色</option>
                        <option value="3">黄金</option>

                    </select>
                    <button type="button" style="height: 28px;padding: 3px 10px;background-color: lightgray;" id="lbtnSearch" class="btn btn-default btn-sm">查询</button>
                </div>

            </div>
        </div>
    </div>
    <!--/工具栏-->
    <!--列表-->
    <div class="table-container">

        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="ltable">
            <thead>
                <tr class="odd_bg">
                    <th width="30px">选择</th>
                    <th>ID</th>
                    <th>类型</th>
                    <th>地址</th>
                    <th>备注</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody id="MyTbody"></tbody>
        </table>

    </div>
    <!--/列表-->
    <!--内容底部-->
    <div class="line20"></div>
    <div class="pagelist">
        <div class="l-btns">
            <span>显示</span><input name="txtPageNum" type="text" id="txtPageNum" class="pagenum"><span>条/页</span>
        </div>
        <div id="PageContent" class="default">

        </div>
    </div>
    <!--/内容底部-->
    <div style="width:100%;text-align: center;">
        <span style="display: inline-block;padding: 4px 15px 0px 15px;color: #666;font-size:14px;">(注 : 1.用户ID(输全),2.微信名称3.用户名称)</span>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        添加LOGO
                    </h4>
                </div>
                <form method="post" onsubmit="return validateForm()" action="/Business/SubmitLogoInfo" enctype="multipart/form-data" role="form">
                    <div class="modal-body">
                        <div>

                            <div class="form-group">
                                <label for="Url">Logo图片</label>
                                @*  <label style="color:red">*请上传900*150尺寸的jpg图片</label>*@
                                <input id="Url" type="hidden" name="Url" />
                                <input type="file" onchange="verificationPicFile(this)" name="_Url" accept="image/*" id="_Url">
                            </div>
                            <div class="form-group">
                                <label for="logotype">类型</label>
                                <select style="width:80%;height:40px;" id="logotype" name="logotype" class="form-control">
                                    <option value="1">纯色</option>
                                    <option value="2">白色</option>
                                    <option value="3">黄金</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="remarks">备注</label>
                                <input type="text" id="remarks" name="remarks" class="form-control">
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            关闭
                        </button>
                        <button type="submit" id="submitaddlogo" class="btn btn-primary">
                            提交
                        </button>
                    </div>
                </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>

    <div class="modal fade" id="myphoneModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        修改用户手机、密码
                    </h4>
                </div>
                <div class="modal-body">
                    <div>
                        <form role="form">
                            <div class="form-group">
                                <label for="name">手机号</label>
                                <input type="text" id="rphonenum" name="rphonenum" class="form-control" placeholder="手机号码">
                                <input type="hidden" id="ruserid" name="ruserid" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="name">登录密码</label>
                                <input type="text" id="rPwd" name="rPwd" class="form-control" placeholder="登录密码">
                            </div>
                        </form>
                        <span style="color:red;font-size:8px;">可以只修改一项,不修改的一项不填写</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        关闭
                    </button>
                    <button type="button" id="Registbtn" class="btn btn-primary">
                        提交
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
    <script>
        var sellogotype = $("#sellogotype").val();
        var storagefirst = window.localStorage;
        var MytxtPageNum = storagefirst["MytxtPageNum"];
        var PageIndex = 1;
        var txtPageNum = 20;
        var Keywords = "";
        if (MytxtPageNum != "" && MytxtPageNum != null) {
            txtPageNum = MytxtPageNum
        } else {
            txtPageNum = txtPageNum
        }
        GetList();
        $("#txtPageNum").val(txtPageNum);

        $("#lbtnSearch").click(function () {
            txtPageNum = $("#txtPageNum").val()
            sellogotype = $("#sellogotype").val();
            PageIndex = 1;
            GetList();
        })
        $("#txtPageNum").change(function () {
            Keywords = $("#txtKeywords").val();
            txtPageNum = $("#txtPageNum").val();
            storagefirst["MytxtPageNum"] = txtPageNum
            PageIndex = 1;
            GetList();
        })
        $("#selectRobot").change(function () {
            Keywords = $("#txtKeywords").val();
            txtPageNum = $("#txtPageNum").val();
            PageIndex = 1;
            GetList();
        })
        function keyLogin(event) {
            if (event.keyCode == 13)
                document.getElementById("lbtnSearch").click();
        }

        $("#PageContent").on("click", "a", function () {
            var lkl2 = $(this).text();

            if (lkl2 == "下一页»") {
                PageIndex = parseInt(PageIndex) + 1
            } else if (lkl2 == "«上一页") {
                PageIndex = parseInt(PageIndex) - 1
            } else {
                PageIndex = lkl2
            }
            Keywords = $("#txtKeywords").val();
            txtPageNum = $("#txtPageNum").val()
            GetList();
        })

        function GetList() {
            var data = {};
            data.PageIndex = PageIndex;
            data.PageSize = txtPageNum;
            data.Keywords = Keywords;
            data.logotype = sellogotype;

   
            $.ajax({
                type: "post", url: '/Business/GetGameLogoList',
                datatype: 'json',
                data: data,
                success: function (res) {
                    if (res.Code == "0" && res.Code == 0) {
                        if (res) {
                        

                            $("#MyTbody").empty();
                            var str = $("#MyTbody").html();
                            if (res.Data.length > 0) {
                                for (var n = 0; n < res.Data.length; n++) {
                                    var opt = "";
                                    var optype = "";

                                    // if (res.RoleId == 1 || res.RoleId == 4 || res.RoleId == 13) {
                                    //opt += "<a class='layerbtn' style='color: white;' href='UserEdit?op=Edit&id=" + res.Data[n].ID + "'>" +
                                    //    "修改" +
                                    //    "  </a>";
                                    //  }
                                    optype = res.Data[n].logotype == 1 ? "纯色" : res.Data[n].logotype == 2 ? "白色" : "黄金";

                                    str = "<tr class='One'>" +
                                        "<td align='center'>" +
                                        "<input id='hidId' type='hidden' name='hidId' value='" + res.Data[n].ID + "'>" +
                                        "<span class='checkall' style='vertical-align: middle;'>" +
                                         "<input type='checkbox' name='chkId' id='chkId' class='checkall'>" +
                                        "</span>" +
                                   
                                        "</td>" +
                                        "<td align='center'>" + res.Data[n].ID + "</td>" +
                                        "<td align='center'>" + optype + "</td>" +
                                            "<td align='center'>" + res.Data[n].Url + "</td>" +
                                            "<td align='center'>" + res.Data[n].remarks + "</td>" +
                                            "<td align='center'>" + res.Data[n].CreatTime + "</td>" +
                                            "<td align='center'>" +
                                            opt
                                    "</td>" +
                                        "</tr>"
                                    $('#MyTbody').append(str);
                                    var sthtml = $("#PageContent").html();
                                    $("#PageContent").empty();
                                    if (res.InnerHtml.length > 0) {
                                        sthtml = res.InnerHtml
                                        $('#PageContent').append(sthtml);
                                    }
                                }
                            } else {
                                $("#MyTbody").empty();
                            }
                        } else {
                            eval(res)
                        }
                    } else {
                        eval(res)
                    }
                }
            })
        }

        function registuser(userid, phonestr) {

            $("#ruserid").val(userid);
            $("#rphonenum").val(phonestr);
        }
        $("#Registbtn").click(function () {
            var PassportID = $("#rphonenum").val();
            var strTemp = /^1[3|4|5|6|7|8|9][0-9]{9}$/;
            if (PassportID != "") {
                if (!strTemp.test(PassportID)) {
                    layer.msg("请填写正确手机号!", { icon: 1 });
                    return;
                }
            }


            var data = {};
            data.userid = $("#ruserid").val();
            data.passstr = $("#rPwd").val();
            data.phonestr = $("#rphonenum").val();
           
            $.ajax({
                type: "post", url: '/Business/RestUserPassWord',
                datatype: 'json',
                data: data,
                success: function (res) {

                    if (res.success) {
                        $('#myphoneModal').modal('hide');
                        layer.msg(res.msg, { icon: 1 });
                    }
                    else {
                        layer.msg(res.msg, { icon: 1 });
                        GetList();
                    }

                }
            });

        })

        function validateForm() {

            var logotype = $("#logotype").val();
            var _Url = $("#_Url").val();
            if (logotype == "") {
                layer.msg('请选择图片类型');
                return false;
            }
            if (_Url == "") {
                layer.msg('请选择Logo图片');
                return false;
            }
         
            return true;
        }

        function verificationPicFile(file) {

            var filePath = file.value;
            if (filePath) {
                //读取图片数据
                var filePic = file.files[0];
                var reader = new FileReader();
                reader.onload = function (e) {
                    var data = e.target.result;
                    //加载图片获取图片真实宽度和高度
                    var image = new Image();
                    image.onload = function () {
                        var width = image.width;
                        var height = image.height;
                        if (width == 600 | height == 200) {
                            return true;
                        } else {
                            return true;
                            alert("文件尺寸应为：600*200！");
                            file.value = "";
                            return false;
                        }
                    };
                    image.src = data;
                };
                reader.readAsDataURL(filePic);
            } else {
                return false;
            }
        }

        $("#btnDelete").click(function () {
            numID = []
            var num1 = {};
            var on1 = $(".One");
            for (var o = 0; o < on1.length; o++) {
                var lkl3 = $(on1[o]).find(".checkall")
                for (var ol = 0; ol < lkl3.length; ol++) {
               
                    if (lkl3[ol].checked == true) {
                        var lkl4 = $(on1[o]).find("#hidId").val();
                        num1.id = lkl4
                        numID.push(num1.id)
                    }
                }
            }
            var a, b;
            a = numID;
            b = a.join(",");
            var ids = b;
            $.ajax({
                url: "/Business/GamelogoDel?ids=" + ids + "",
                type: "post",
                contentType: "application/json",
                dataType: "json",
                success: function (data) {
                    eval(data);
                 
                    GetList();

                }
            })
        })

    </script>
</body>